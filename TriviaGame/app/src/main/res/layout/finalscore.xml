<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" android:background="@drawable/finalscore3">
	
	<TextView
		android:id="@+id/finalscoreimage"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:layout_marginRight="150dip"
		android:layout_marginTop = "15dip"
		android:layout_marginLeft="5dip" >
	</TextView>
	
	<TextView
		android:id="@+id/finalscore"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:layout_marginTop="75dip"
		android:layout_marginLeft="240dip"
		android:textStyle="bold" 
		android:textColor="#ff000000">
	</TextView>
	
	<TextView
		android:id="@+id/finalmessage"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:layout_marginTop="169dip"
		android:layout_marginLeft="175dip"
		android:layout_marginRight="13dip"
		android:textStyle="bold" 
		android:textColor="#ff000000">
	</TextView>
	

	<Button
		android:id="@+id/buttonnewgame"
		android:text="New Game"		
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginTop="350dip"
		android:layout_marginLeft="95dip" 
		android:background="@drawable/buttontoexit2" 
		android:textStyle="bold">
	</Button>

</RelativeLayout>
	
